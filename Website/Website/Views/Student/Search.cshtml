@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Student/_Layout.cshtml";
}
@ViewBag.Message
<h2>Books</h2>

<table class="table table-responsive table-striped">
    <tr>
        <th>ISBN</th>
        <th>Title</th>
        <th>Author</th>
        <th>Category</th>
        <th>Qty Available</th>
        <th>CheckOut</th>
    </tr>
    @foreach(Website.Models.Book book in ViewBag.Results)
    {
        <tr>
            <td>@book.ISBN</td>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Category</td>
            <td>@book.Quantity_Available</td>
            <td><button onclick="window.location='/Student/CheckOut?ISBN=@book.ISBN'" class="btn-primary">CheckOut</button></td>
        </tr>
    }
</table>