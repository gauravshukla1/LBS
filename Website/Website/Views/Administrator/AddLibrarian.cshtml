@model Website.Models.LibraryAdministrator
@{
    ViewBag.Title = "AddLibrarian";
    Layout = "~/Views/Administrator/_Layout.cshtml";
}
<p style="color:dodgerblue">
    @ViewBag.Message
    <h2>Add Librarian</h2>

    <div class="form-horizontal">
        <!--<h2 style="text-transform:uppercase">Add Librarian</h2>-->
        <hr />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "Add Librarian Failed. Please try again..!!", new { @class = "alert-warning" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(u => u.EmailID)
                    @Html.TextBoxFor(u => u.EmailID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.EmailID, String.Empty, new { @class = "alert-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(u => u.Password)
                    @Html.TextBoxFor(u => u.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Password, String.Empty, new { @class = "alert-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(u => u.FirstName)
                    @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.FirstName, String.Empty, new { @class = "alert-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.LabelFor(u => u.LastName)
                    @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.LastName, String.Empty, new { @class = "alert-danger" })
                </div>
            </div>
            <input type="submit" value="AddLibrarian" class="btn btn-default" />
        }
    </div>
