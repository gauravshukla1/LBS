@model Website.Models.LibraryUser
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@ViewBag.Message

<!--<h2>LogIn</h2>-->
<div class="form-horizontal">
    <h2 style="text-transform:uppercase">Registration Form</h2>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Registration Failed. Check your field values", new { @class = "alert-warning" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(u => u.EmailID)
                @Html.TextBoxFor(u => u.EmailID, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.EmailID, String.Empty, new { @class = "alert-danger" })
                
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(u => u.Password)
                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Password, String.Empty, new { @class = "alert-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(u => u.FirstName)
                @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.FirstName, String.Empty, new { @class = "alert-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(u => u.LastName)
                @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.LastName, String.Empty, new { @class = "alert-danger" })
            </div>
        </div>
        <input type="submit" value="Register" class="btn btn-default" />
    }


</div>
